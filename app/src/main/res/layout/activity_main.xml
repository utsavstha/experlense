<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.pchab.androidrtc.MainActivity"
    android:padding="60dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Expert Lense" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:text="I am"
        android:id="@+id/textView2"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:text="Expert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="105dp"
        android:id="@+id/ready_to_receive"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:text="User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ready_to_receive"
        android:layout_alignLeft="@+id/ready_to_receive"
        android:layout_alignStart="@+id/ready_to_receive" />


</RelativeLayout>
